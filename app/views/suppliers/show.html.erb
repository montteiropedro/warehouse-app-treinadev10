<h2><%= @supplier.corporate_name %></h2>

<div>
  <dl>
    <dt><strong><%= I18n.t 'activerecord.attributes.supplier.registration_number' %>:</strong></dt>
    <dd><%= @supplier.registration_number %></dd>

    <dt><strong><%= I18n.t 'activerecord.attributes.supplier.full_address' %>:</strong></dt>
    <dd><%= @supplier.full_address %> - <%= @supplier.city %>, <%= @supplier.state %></dd>

    <dt><strong><%= I18n.t 'activerecord.attributes.supplier.email' %>:</strong></dt>
    <dd><%= @supplier.email %></dd>
  </dl>
</div>

<%= button_to 'Remover', @supplier, method: :delete %>
<%= link_to 'Editar', edit_supplier_path(@supplier) %>

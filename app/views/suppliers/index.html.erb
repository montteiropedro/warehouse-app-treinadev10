<h2><%= I18n.t 'activerecord.models.supplier.other' %></h2>

<%= link_to 'Cadastrar Fornecedor', new_supplier_path %>
<%= link_to 'Voltar', root_path %>

<% if @suppliers.any? %>
  <table>
    <thead>
      <tr>
        <th><%= I18n.t 'views.suppliers.name' %></th>
        <th><%= I18n.t 'views.suppliers.localization' %></th>
      </tr>
    </thead>
    <tbody>
      <% @suppliers.each do |supplier| %>
        <tr>
          <td><%= link_to supplier.brand_name, supplier %></td>
          <td><%= supplier.city %> - <%= supplier.state %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>NÃ£o existem fornecedores cadastrados.</p>
<% end %>
